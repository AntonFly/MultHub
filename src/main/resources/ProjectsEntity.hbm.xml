<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.ProjectsEntity" table="projects" schema="public" catalog="multhub">
        <id name="projectid">
            <column name="projectid" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>
        <property name="curbudget">
            <column name="curbudget" sql-type="money" not-null="true"/>
        </property>
        <property name="goalbudget">
            <column name="goalbudget" sql-type="money" not-null="true"/>
        </property>
        <set name="commentsByProjectid" inverse="true">
            <key>
                <column name="projectid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="entity.CommentsEntity"/>
        </set>
        <set name="commitsByProjectid" inverse="true">
            <key>
                <column name="projectid"/>
            </key>
            <one-to-many not-found="ignore" class="entity.CommitsEntity"/>
        </set>
        <set name="developersByProjectid" inverse="true">
            <key>
                <column name="projectid"/>
            </key>
            <one-to-many not-found="ignore" class="entity.DevelopersEntity"/>
        </set>
        <set name="requestsByProjectid" inverse="true">
            <key>
                <column name="projectid"/>
            </key>
            <one-to-many not-found="ignore" class="entity.RequestsEntity"/>
        </set>
        <set name="subsByProjectid" inverse="true">
            <key>
                <column name="projectid"/>
            </key>
            <one-to-many not-found="ignore" class="entity.SubsEntity"/>
        </set>
    </class>
</hibernate-mapping>