<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UsersEntity" table="users" schema="public" catalog="multhub">
        <id name="login">
            <column name="login" sql-type="varchar(30)" length="30"/>
        </id>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="text" not-null="true"/>
        </property>
        <one-to-one name="connectiondataByLogin" class="entity.ConnectiondataEntity"/>
        <one-to-one name="creditinfoByLogin" class="entity.CreditinfoEntity"/>
        <set name="commentsByLogin" inverse="true">
            <key>
                <column name="login" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="entity.CommentsEntity"/>
        </set>
        <set name="developersByLogin" inverse="true">
            <key>
                <column name="login"/>
            </key>
            <one-to-many not-found="ignore" class="entity.DevelopersEntity"/>
        </set>
        <set name="requestsByLogin" inverse="true">
            <key>
                <column name="login"/>
            </key>
            <one-to-many not-found="ignore" class="entity.RequestsEntity"/>
        </set>
        <set name="subsByLogin" inverse="true">
            <key>
                <column name="login"/>
            </key>
            <one-to-many not-found="ignore" class="entity.SubsEntity"/>
        </set>
    </class>
</hibernate-mapping>