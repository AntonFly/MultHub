<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CommentsEntity" table="comments" schema="public" catalog="multhub">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="projectid">
            <column name="projectid" sql-type="integer" not-null="true"/>
        </property>
        <property name="login">
            <column name="login" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="filedirectory">
            <column name="filedirectory" sql-type="text" not-null="true"/>
        </property>
        <property name="time">
            <column name="time" sql-type="timestamp" not-null="true"/>
        </property>
        <many-to-one name="projectsByProjectid" class="entity.ProjectsEntity">
            <column name="projectid" not-null="true"/>
        </many-to-one>
        <many-to-one name="usersByLogin" class="entity.UsersEntity">
            <column name="login" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>